@{
    Layout = "_404Layout";
    ViewData["Title"] = "Page Not Found";
}

<main class="grid min-h-full place-items-center px-6 sm:py-20 lg:px-8">
    <div class="text-center">
        <img src="/img/404.png" />
        <h1 class="mt-4 text-3xl font-bold tracking-tight text-white-900 sm:text-5xl">Page not found</h1>
        <p class="mt-6 text-base leading-7 text-white-600">Sorry, we couldn’t find the page you’re looking for.</p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
            <a asp-controller="Home" asp-action="Index" class="rounded-md btn btn-primary px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2">Go back home</a>
        </div>
    </div>
</main>
